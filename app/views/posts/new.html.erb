<div class="page-header">
    <h2>New post</h2>
</div>

<%= form_for @post, html: {class: 'form-horizontal center'} do |f| %>

<% if @post.errors.any? %>
  <div class="alert alert-danger">
    <b><%= pluralize(@post.errors.count, "error") %> on form.</b>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
          <li>* <%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

    <div class="form-group">
      <%= f.label :name, class: 'col-md-4 control-label' %>
      <div class="col-md-6">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, class: 'col-md-4 control-label' %>
      <div class="col-md-6">
        <%= f.text_area :content, class: 'form-control' %>
      </div>
    </div>

    <%= f.submit 'Add post', class: 'btn btn-large btn-primary' %>
<% end %>
